<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="650.0" styleClass="anchorpane" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.Controller">
   <children>
      <Canvas fx:id="canvas" height="500.0" width="500.0" />
      <VBox alignment="CENTER" layoutX="500.0" prefHeight="500.0" prefWidth="150.0" styleClass="vbox">
         <children>
            <Label fx:id="mapLabel" text="Map: null" textAlignment="CENTER" styleClass="label" />
            <Label fx:id="timeLabel" text="Time: 0" textAlignment="CENTER" styleClass="label" />
            <Label fx:id="depotsLabel" text="Depots: 0" textAlignment="CENTER" styleClass="label" />
            <Label fx:id="vehiclesLabel" text="Vehicles: 0" textAlignment="CENTER" styleClass="label" />
            <Label fx:id="customersLabel" text="Customers: 0" textAlignment="CENTER" styleClass="label" />
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#togglePaused" styleClass="button" text="Start" />
         </children>
      </VBox>
   </children>
</AnchorPane>
